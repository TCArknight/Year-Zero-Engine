      </inputthing>
    <inputthing
      name="Archetype Name (Primary)"
      helptext="What are primary archetypes called in the setting?">
      <it_tagpick group="ArchetypeNamePri" tag="?" />
      </inputthing>
    <inputthing
      name="Use Archetypes (Secondary)?"
      helptext="Specify whether this setting uses secondary archetypes.">
      <it_tagcheck group="SettingFlag" tag="UseArchetypeSec"/>
      </inputthing>
    <inputthing
      name="Archetypes (Secondary) Required?"
      helptext="Specify whether this weapon is two-handed.">
      <it_tagcheck group="SettingFlag" tag="ArchtypeSecReq"/>
      </inputthing>
    <inputthing
      name="Archetype Name (Secondary)"
      helptext="What are secondary archetypes called in the setting?">
      <it_tagpick group="ArchetypeNameSec" tag="?" />
      </inputthing>
	<inputthing
	  name="Aging">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Adjust Attribute/Skill pts for age?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="AgeAdjust"/>
      </inputthing>
	<inputthing
	  name="Personality Traits">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Use Pride?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="UsePride"/>
      </inputthing>
    <inputthing
      name="Use Weakness?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="UseWeakness"/>
      </inputthing>
    <inputthing
      name="Use Dark Secret?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="UseDarkSecret"/>
      </inputthing>
    <inputthing
      name="Use Big Dream?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="UseBigDream"/>
      </inputthing>
    <inputthing
      name="Use Relationships?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="UseRelationship"/>
      </inputthing>
    <inputthing
      name="Use Buddy?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="UseBuddy"/>
      </inputthing>
    <inputthing
      name="Use Rival?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="UseRival"/>
      </inputthing>
    <inputthing
      name="Use How Met Group?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="UseHowMet"/>
      </inputthing>
    <inputthing
      name="Use Personal Agenda?"
      helptext="Specify ...">
      <it_tagcheck group="SettingFlag" tag="UseAgenda"/>
      </inputthing>
	<inputthing
	  name="Encumbrance">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Use Standard Encumbrance?"
      helptext="Specify ... (2xSTR in weight/items)">
      <it_tagcheck group="SettingFlag" tag="EncumStandard"/>
      </inputthing>
    <inputthing
      name="Backpack Encumbrance?"
      helptext="Specify ... (2xSTR in weight/items)">
      <it_tagcheck group="SettingFlag" tag="EncumBackpack"/>
      </inputthing>
	  

    <inputthing>
      <it_groupref id="SourceInfo"/>
      </inputthing>
    </editthing>

  <!-- Specialty editthing -->
  <editthing
    compset="Specialty"
    name="Specialties"
    prefix="ab"
    description="..."
    summary="Defines a Specialty.">
    <inputthing
      name="Specialty Category"
      helptext="Specify what category this specialty belongs in.">
      <it_tagpick group="SpecCat" tag="?" deftag="General"/>
      </inputthing>

    <inputthing
      name="Magic Casting Specialty?"
      helptext="Specify whether this specialty is a casting specialty.">
      <it_tagcheck group="Helper" tag="MagicSpecialty"/>
      </inputthing>
    <inputthing
      name="Magic Type?"
      helptext="Specify whether this specialty is a casting specialty.">
      <it_tagpick group="Magic" tag="mag?"/>
      </inputthing>
	<inputthing
	  name="Ranks">
      <it_separator/>
      </inputthing>

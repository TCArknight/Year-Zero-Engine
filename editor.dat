      </inputthing>
    <inputthing>
      <it_groupref id="SourceInfo"/>
      </inputthing>
    </editthing>

  <!-- Armor editthing -->
  <editthing
    compset="Armor"
    name="Armor"
    prefix="arm"
    description="Weapons, vehicles, and simple equipment all have their own tabs for creating objects of those types."
    summary="Defines armor that can be selected on the Armory tab.">
    <inputthing>
      <it_groupref id="BaseDefense"/>
      </inputthing>
    <inputthing>
      <it_groupref id="BaseGear"/>
      </inputthing>

    <inputthing>
      <it_groupref id="SourceInfo"/>
      </inputthing>
    </editthing>

  <!-- Shield editthing -->
  <editthing
    compset="Shield"
    name="Shield"
    prefix="shd"
    description="Weapons, vehicles, and simple equipment all have their own tabs for creating objects of those types."
    summary="Defines a shield that can be selected on the Armory tab.">
    <inputthing>
      <it_groupref id="BaseDefense"/>
      </inputthing>
    <inputthing>
      <it_groupref id="BaseGear"/>
      </inputthing>

    <inputthing>
      <it_groupref id="SourceInfo"/>
      </inputthing>
    </editthing>

  <!-- Magic editthing -->
  <editthing
    compset="Magic"
    name="Magic Type"
    prefix="mag"
    description="..."
    summary="Defines a type of magic used by the hero.">

    <inputthing>
      <it_groupref id="SourceInfo"/>
      </inputthing>
    </editthing>
	
  <!-- Spell editthing -->
  <editthing
    compset="Spell"
    name="Magic Spell"
    prefix="spl"
    description="..."
    summary="Defines a magic spell to be used by the hero.">
    <inputthing
      name="Magic Type"
      helptext="What type of magic is it? ">
      <it_tagpick group="Magic" tag="mag?" />
      </inputthing>
    <inputthing
      name="Magic Rank"
      helptext="What rank of spell is it? ">
      <it_tagpick group="MagicRank" tag="?" />
      </inputthing>
    <inputthing
      name="Magic Range"
      helptext="What is the range of the spell? ">
      <it_tagpick group="MagicRange" tag="?" />
      </inputthing>
    <inputthing
      name="Magic Duration"
      helptext="What is the duration of the spell? ">
      <it_tagpick group="MagicDuration" tag="?" />
      </inputthing>
    <inputthing
      name="Magic Ingredients?"
      helptext="What ingredients are required for the spell?">
      <it_field field="splIngredients"/>
      </inputthing>

    <inputthing>
      <it_groupref id="SourceInfo"/>
      </inputthing>
    </editthing>
	
  <!-- Mechanics editthing -->
  <editthing
    compset="Mechanics"
    name="Mechanic"
    description="A mechanics thing will be automatically added to every character to apply its effects. There is no built-in logic for mechanics,{br}as they provide a means for the user to customize everything to work as he chooses. As such, there are no fields and{br}everything is assumed to be done through scripts."
    summary="Defines a set of custom behaviors that are defined by the user and applied to each character.">

    <inputthing>
      <it_groupref id="SourceInfo"/>
      </inputthing>
    </editthing>

  <!-- Archetype editthing -->
  <editthing
    compset="Archetype"
    name="Archetype"
    prefix="arc"
    description="Archetype have no special fields - only a name. If a Archetype confers an ability,{br}create it as a special ability and bootstrap it from the Archetype."
    summary="Defines an Archetype that can be selected by a character.">
    <inputthing
      name="Archetype Type"
      helptext="What type of Archetype is it? If there are only one kind of archetype in your setting, then select Primary. ">
      <it_tagpick group="ArchetypeCat" tag="?" />
      </inputthing>
	
    <inputthing
      name="Key Attributes?"
      helptext="Specify whether an attibute is considered key.">
      <it_taglist group="KeyAttribute" tag="?"/>
      </inputthing>
    <inputthing
      name="Key Skills?"
      helptext="Specify whether a skill is considered key.">
      <it_taglist group="KeySkill" tag="?"/>
      </inputthing>
	<inputthing
	  name="Aging?">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Max Young Age?"
      helptext="if this archetype determines the hero's age, then enter the value that is the top or the young range.">
      <it_field field="arcAgeYoung"/>
      </inputthing>
    <inputthing
      name="Max Adullt Age?"
      helptext="if this archetype determines the hero's age, then enter the value that is the top or the adult range.">
      <it_field field="arcAgeAdult"/>
      </inputthing>

    <inputthing
      name="Archetype Specialty"
      helptext="Select any specialties given by the archetype. ">
        <it_bootlist compset="Specialty" />
      </inputthing>
    <inputthing
      name="Uses Magic?"
      helptext="Select this if the archetype represents someone who can use magic.">
      <it_tagcheck group="Magic" tag="CanUseMagic"/>
      </inputthing>

    <inputthing>
      <it_groupref id="SourceInfo"/>
      </inputthing>
    </editthing>
	
  <!-- Setting editthing -->
  <editthing
    compset="Setting"
    name="Setting"
    description="A setting thing will set various game=specific options for the hero."
	summary="Defines a set of custom behaviors that are defined by the user and applied to each character.">
	
	<inputthing
	  name="Dice Method">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Dice Pool"
      helptext="Specify whether this setting uses Dice Pool Method.">
      <it_tagcheck group="SettingFlag" tag="DicePool"/>
      </inputthing>
    <inputthing
      name="Dice Steps"
      helptext="Specify whether this setting uses Dice Pool Method.">
      <it_tagcheck group="SettingFlag" tag="StepDice"/>
      </inputthing>
	  
	<inputthing
	  name="Damage Method">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Use Health (Avg Str+Agi)"
      helptext="Specify whether this setting uses a health damage method.">
      <it_tagcheck group="SettingFlag" tag="UseHealth"/>
      </inputthing>
    <inputthing
      name="Use Health (Str Only)"
      helptext="Specify whether this setting uses a health damage method with Str only.">
      <it_tagcheck group="SettingFlag" tag="UseHealthStrOnly"/>
      </inputthing>
    <inputthing
      name="Use Resolve"
      helptext="Specify whether this setting uses a resolve damage method.">
      <it_tagcheck group="SettingFlag" tag="UseResolve"/>
      </inputthing>
    <inputthing
      name="Use Stress"
      helptext="Specify whether this setting uses a stress damage method.">
      <it_tagcheck group="SettingFlag" tag="UseStress"/>
      </inputthing>
    <inputthing
      name="Use Attribute Damage"
      helptext="Specify whether this setting uses an attribute damage method.">
      <it_tagcheck group="SettingFlag" tag="AttributeDamage"/>
      </inputthing>
	  
	<inputthing
	  name="Specialties">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Beginning Specialties"
      helptext="The number of typical beginning specialties for an adult in the setting (Default = 1).">
      <it_field field="setNumSpecialties"/>
      </inputthing>
    <inputthing
      name="Specialty Term"
      helptext="The term used for a specialty in the setting (Default = Specialty).">
      <it_field field="setSpecialtyTerm"/>
      </inputthing>
    <inputthing
      name="Specialty Term (Plural)"
      helptext="The term used for multiple specialties in the setting (Default = Specialties).">
      <it_field field="setSpecialtyTermP"/>
      </inputthing>
	<inputthing
	  name="Setting Skills">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Purchase Skill Steps?"
      helptext="Select this if you can spend starting points for Skill Steps.">
      <it_tagcheck group="SettingFlag" tag="DirectSkill"/>
      </inputthing>
    <inputthing
      name="Skills"
      helptext="Specify what skills exist in this setting.">
      <it_taglist group="SettingSkill" tag="?"/>
      </inputthing>
	  
	<inputthing
	  name="Key Attributes/Key Skills">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Use Key Attributes?"
      helptext="Specify whether this setting uses Key Attributes.">
      <it_tagcheck group="SettingFlag" tag="UseKeyAttributes"/>
      </inputthing>
    <inputthing
      name="Use Key Skills?"
      helptext="Specify whether this setting uses Key Skills.">
      <it_tagcheck group="SettingFlag" tag="UseKeySkills"/>
      </inputthing>
	  
	<inputthing
	  name="Archetypes">
      <it_separator/>
      </inputthing>
    <inputthing
      name="Use Archetypes (Primary)?"
      helptext="Specify whether this weapon is two-handed.">
      <it_tagcheck group="SettingFlag" tag="UseArchetypePri"/>
      </inputthing>
    <inputthing
      name="Archetypes (Primary) Required?"
      helptext="Specify whether this setting uses primary archetypes">
